.page {
  padding-top: 200rpx;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
}

.restaurant {
  margin: 0 auto;
  padding: 60rpx 30rpx;
  width: 600rpx;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}
.restaurant .cover {
  margin: 0 auto;
  width: 400rpx;
  height: 400rpx;
  border-radius: 99999rpx;
}
.restaurant .name {
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.restaurant .recommend {
  margin-top: 40rpx;
  color: #999;
}

.button {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: red;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 100%);
}